# Auto detect text files and normalize them
* text=auto

# Force LF line endings for specific files
*.sh text eol=lf
*.js text eol=lf
*.css text eol=lf
*.html text eol=lf
*.json text eol=lf
*.md text eol=lf
*.java text eol=lf
*.properties text eol=lf
*.yml text eol=lf
*.xml text eol=lf

# Windows-specific files
*.cmd text eol=crlf
*.bat text eol=crlf
